<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TrackBook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryVariant">@color/gold_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gold_complementary</item>
        <item name="colorSecondaryVariant">@color/gold_complementaryAccent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    <style name="RobotoButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="RobotoTextViewStyle" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto</item>
    </style>
</resources>